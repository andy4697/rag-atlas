# Environment Configuration
ENV=development
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Database (for local development)
DATABASE_URL=postgresql+asyncpg://rag_user:rag_password@localhost:5432/rag_db

# Redis
REDIS_URL=redis://localhost:6379/0

# OpenSearch
OPENSEARCH_HOST=localhost
OPENSEARCH_PORT=9200
OPENSEARCH_USE_SSL=false

# Authentication
SECRET_KEY=your-secret-key-change-in-production-min-32-chars

# LLM Configuration
OLLAMA_URL=http://localhost:11434
OPENAI_API_KEY=your-openai-api-key

# Langfuse (Optional)
LANGFUSE_SECRET_KEY=your-langfuse-secret-key
LANGFUSE_PUBLIC_KEY=your-langfuse-public-key
LANGFUSE_HOST=http://localhost:3000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# CORS
CORS_ORIGINS=["*"]

# Agent Settings
MAX_CONCURRENT_AGENTS=5
AGENT_TIMEOUT_SECONDS=300

# Embedding Settings
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# arXiv Settings
ARXIV_BASE_URL=http://export.arxiv.org/api/query

# Airflow Configuration
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://rag_user:rag_password@postgres:5432/rag_db
AIRFLOW__CORE__FERNET_KEY=your-fernet-key-here-32-chars-base64
AIRFLOW__WEBSERVER__SECRET_KEY=your-webserver-secret-key-here